<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xbirder.bike.hummingbird.common.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:title_text="@string/my_information" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:layout_marginTop="@dimen/default_gap_60"
        android:background="@color/common_gray_day" />

    <RelativeLayout
        android:id="@+id/my_setting_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_head_portrait"
            style="@style/item_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_148"
            android:layout_marginLeft="@dimen/default_gap_50"
            android:background="@null"
            android:paddingRight="@dimen/default_gap_50"
            android:text="@string/setting_head_portrait" />

        <com.makeramen.roundedimageview.RoundedImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_head"
            android:layout_width="@dimen/default_gap_118"
            android:layout_height="@dimen/default_gap_118"
            android:scaleType="centerInside"
            android:src="@drawable/icon_photo_small"
            app:riv_border_color="#00FFFFFF"
            app:riv_border_width="2dip"
            app:riv_corner_radius="@dimen/default_gap_100"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_name3"/>

        <TextView
            android:id="@+id/tv_name3"
            style="@style/item_text"
            android:layout_width="50dp"
            android:layout_height="@dimen/default_gap_148"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/default_gap_40"
            android:drawableRight="@drawable/icon_next_change"
            android:paddingRight="@dimen/default_gap_70"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:background="@color/common_gray_day" />

    <RelativeLayout
        android:id="@+id/my_setting_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/item_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_100"
            android:layout_marginLeft="@dimen/default_gap_50"
            android:background="@null"
            android:paddingRight="@dimen/default_gap_50"
            android:text="@string/register_input_phone_remind" />

        <TextView
            android:id="@+id/tv_phone_number"
            style="@style/item_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_gap_100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center|right"
            android:text=""
            android:paddingRight="@dimen/default_gap_70"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:background="@color/common_gray_day"
        android:layout_marginLeft="@dimen/default_gap_50"/>

    <RelativeLayout
        android:id="@+id/my_setting_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/item_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_100"
            android:layout_marginLeft="@dimen/default_gap_50"
            android:text="@string/setting_name" />

        <TextView
            android:id="@+id/tv_new_name"
            style="@style/item_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_gap_100"
            android:layout_toLeftOf="@+id/tv_name2"
            android:gravity="center|left"
            android:text="@string/app_name"
            android:paddingRight="@dimen/default_gap_40"/>

        <TextView
            android:id="@+id/tv_name2"
            style="@style/item_text"
            android:layout_width="50dp"
            android:layout_height="@dimen/default_gap_100"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_next_change"
            android:paddingRight="@dimen/default_gap_70" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:background="@color/common_gray_day" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:background="@color/common_gray_day"
        android:layout_marginTop="@dimen/default_gap_140"/>

    <RelativeLayout
        android:id="@+id/my_setting_modify_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/item_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gap_100"
            android:layout_marginLeft="@dimen/default_gap_50"
            android:text="@string/change_passwrod" />

        <TextView
            style="@style/item_text"
            android:layout_width="50dp"
            android:layout_height="@dimen/default_gap_100"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_next_change"
            android:paddingRight="@dimen/default_gap_70" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_1"
        android:background="@color/common_gray_day" />

    <Button
        android:background="@drawable/reg_btn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/default_gap_100"
        android:layout_marginRight="@dimen/default_gap_100"
        android:layout_marginTop="@dimen/default_gap_150"
        android:text="@string/quit_login"
        android:textColor="@color/common_orange_day"
        android:textSize="@dimen/default_size_36"
        android:id="@+id/quit_login"
        android:layout_height="@dimen/default_gap_93">
    </Button>
