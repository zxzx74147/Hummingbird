<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_day"
    tools:context="com.xbirder.bike.hummingbird.main.MainActivity">



    <com.xbirder.bike.hummingbird.main.widget.BatteryRollView
        android:layout_width="@dimen/default_gap_500"
        android:layout_centerHorizontal="true"
        android:id="@+id/roll_view"
        android:src="@drawable/icon_100"
        android:layout_marginTop="@dimen/default_gap_120"
        android:layout_height="@dimen/default_gap_500" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/roll_view"
        android:layout_alignEnd="@+id/roll_view"
        android:orientation="vertical"
        android:layout_alignTop="@+id/roll_view"
        android:layout_marginBottom="@dimen/default_gap_50"
        android:layout_alignBottom="@+id/roll_view"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/speed_num"
            android:textSize="@dimen/default_size_230"
            android:text="50"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textColor="@color/common_orange_day"
            android:lineSpacingExtra="0dip"
            android:layout_marginBottom="-15dp"
            android:lineSpacingMultiplier="1"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:textSize="@dimen/default_size_60"-->
            <!--android:text="KM/H"-->
            <!--android:id="@+id/km_text"-->
            <!--android:layout_below="@+id/speed_num"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:textColor="@color/common_gray_day"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </RelativeLayout>
    
    <TextView
        android:layout_below="@+id/roll_view"
        android:id="@+id/battery_num"
        android:textSize="@dimen/default_size_65"
        android:layout_marginTop="@dimen/default_gap_30"
        android:text="30%"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_gray_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/battery_num"
        android:id="@+id/battery_show"
        android:textSize="@dimen/default_size_40"
        android:text="电量"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_gray_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/battery_show"
        android:layout_width="@dimen/default_gap_613"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_gap_50"
        android:layout_height="@dimen/default_gap_100">

        <ImageView
            android:src="@drawable/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/icon_e_drawable"
                android:id="@+id/mode_e"
                android:layout_width="wrap_content"
                android:scaleType="fitStart"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="1dip"/>
            <ImageView
                android:src="@drawable/icon_n_drawable"
                android:layout_width="wrap_content"
                android:id="@+id/mode_n"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="1dip"/>
            <ImageView
                android:src="@drawable/icon_s_drawable"
                android:layout_width="wrap_content"
                android:id="@+id/mode_s"
                android:scaleType="fitEnd"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
