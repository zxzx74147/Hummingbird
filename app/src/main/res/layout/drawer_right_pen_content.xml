                    android:layout_width="wrap_content"
                    android:textColor="@color/common_orange_day"
                    android:lineSpacingExtra="0dip"
                    android:lineSpacingMultiplier="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/default_gap_50"
                    android:layout_height="@dimen/default_gap_50"
                    android:src="@drawable/pen_content_power_left"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:textSize="@dimen/default_size_40"
                    android:text="剩余电量"
                    android:layout_marginLeft="@dimen/default_gap_2"
