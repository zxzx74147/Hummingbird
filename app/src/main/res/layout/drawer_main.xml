        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_gap_25"
        android:text="xbird"
        android:textColor="@color/common_text_gray_day"
        android:textSize="@dimen/text_size_name" />

    <RelativeLayout
